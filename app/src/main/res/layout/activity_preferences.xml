<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".PreferencesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/step_first"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    android:layout_marginBottom="25dp"
                    android:text="Изменение персональных данных" />
                <TextView
                    android:id="@+id/textView1"
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="8pt"
                    android:textStyle="bold"
                    android:text="Выберите пол" />
                <Spinner
                    android:id="@+id/spinner_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#000"
                    android:background="@drawable/registry_login"
                    android:padding="15dp"
                    android:layout_marginBottom="5dp"
                    android:entries="@array/genders"/>
                <TextView
                    android:id="@+id/textView2"
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="8pt"
                    android:textStyle="bold"
                    android:text="Укажите возраст" />
                <EditText
                    android:id="@+id/user_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#000"
                    android:background="@drawable/registry_login"
                    android:padding="15dp"
                    android:hint="Введите возраст..."
                    android:layout_marginBottom="5dp"
                    android:inputType="number" />
                <TextView
                    android:id="@+id/textView3"
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="8pt"
                    android:textStyle="bold"
                    android:text="Укажите текущий вес" />
                <EditText
                    android:id="@+id/user_current_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#000"
                    android:background="@drawable/registry_login"
                    android:padding="15dp"
                    android:hint="Введите текущий вес..."
                    android:layout_marginBottom="5dp"
                    android:inputType="number" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="8pt"
                    android:textStyle="bold"
                    android:text="Укажите желаемый вес" />
                <EditText
                    android:id="@+id/user_desired_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#000"
                    android:background="@drawable/registry_login"
                    android:padding="15dp"
                    android:hint="Введите желаемый вес..."
                    android:layout_marginBottom="5dp"
                    android:inputType="number" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="8pt"
                    android:textStyle="bold"
                    android:text="Укажите рост" />
                <EditText
                    android:id="@+id/user_growth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#000"
                    android:background="@drawable/registry_login"
                    android:padding="15dp"
                    android:hint="Введите рост..."
                    android:layout_marginBottom="5dp"
                    android:inputType="number" />
                <TextView
                    android:id="@+id/textView6"
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="8pt"
                    android:textStyle="bold"
                    android:text="Укажите месячный бюджет (руб.)" />
                <EditText
                    android:id="@+id/user_monthly_budget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#000"
                    android:background="@drawable/registry_login"
                    android:padding="15dp"
                    android:hint="Введите месячный бюджет..."
                    android:layout_marginBottom="5dp"
                    android:inputType="number" />

            </LinearLayout>
        </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/next_button_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:backgroundTint="#ACDA20"
                android:textColor="#fff"
                android:padding="15dp"
                android:text="Далее" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/step_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:gravity="center"
                        android:textSize="12pt"
                        android:textStyle="bold"
                        android:layout_marginBottom="25dp"
                        android:text="Предпочтения в питании" />
                    <TextView
                        android:id="@+id/textView9"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="8pt"
                        android:textStyle="bold"
                        android:text="Непереносимость/Аллергия" />
                    <TextView
                        android:id="@+id/intolerance"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:background="@android:drawable/editbox_background"
                        android:drawableRight="@android:drawable/arrow_down_float"
                        android:drawablePadding="16dp"
                        android:hint="При желании выберите необходимые продукты..."
                        android:layout_marginBottom="20dp"
                        android:padding="12dp" />
                    <TextView
                        android:id="@+id/textView10"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="8pt"
                        android:textStyle="bold"
                        android:text="Любимые продукты" />
                    <TextView
                        android:id="@+id/favorite_foods"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:background="@android:drawable/editbox_background"
                        android:drawableRight="@android:drawable/arrow_down_float"
                        android:drawablePadding="16dp"
                        android:hint="При желании выберите необходимые продукты..."
                        android:layout_marginBottom="20dp"
                        android:padding="12dp" />
                    <TextView
                        android:id="@+id/textView11"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="8pt"
                        android:textStyle="bold"
                        android:text="Нелюбимые продукты" />
                    <TextView
                        android:id="@+id/unloved_foods"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:background="@android:drawable/editbox_background"
                        android:drawableRight="@android:drawable/arrow_down_float"
                        android:drawablePadding="16dp"
                        android:hint="При желании выберите необходимые продукты..."
                        android:layout_marginBottom="20dp"
                        android:padding="12dp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/next_button_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:backgroundTint="#ACDA20"
                android:textColor="#fff"
                android:padding="15dp"
                android:text="Далее" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="horizontal">
        <ProgressBar
            android:id="@+id/progress_linear3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:indeterminateDrawable="@drawable/spinner_progress"
            android:indeterminateOnly="true" />
    </LinearLayout>
</RelativeLayout>